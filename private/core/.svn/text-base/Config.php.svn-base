class Config {

	/**
	 * conf in a cache array
	 *
	 * @access private
	 * @var    array
	 */
	 
	private static $_aConfCache = array();
	
	/**
	 * get a configuration
	 *
	 * @access public
	 * @param  string sName name of the configuration
	 * @return void
	 */

	public static function get($sName) {

		if (!isset(self::$_aConfCache[$sName])) { 

			if (file_exists(str_replace('core', 'conf', __DIR__).DIRECTORY_SEPARATOR.$sName.'.conf-local')) {

				self::$_aConfCache[$sName] = json_decode(file_get_contents(str_replace('core', 'conf', __DIR__).DIRECTORY_SEPARATOR.$sName.'.conf-local'));
			}
			else {
			
				self::$_aConfCache[$sName] = json_decode(file_get_contents(str_replace('core', 'conf', __DIR__).DIRECTORY_SEPARATOR.$sName.'.conf'));
			}
		}
		
		return self::$_aConfCache[$sName];
	}
}
