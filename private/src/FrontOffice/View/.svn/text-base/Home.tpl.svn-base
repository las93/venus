<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html xmlns="http://www.w3.org/1999/xhtml"> 
	<head> 

	</head>
	<body style="background-color:gray">
		<table cellpadding="5" cellspacing="2" style="background-color:#70b8ef">
			<tr>
				<td style="background-color:white">Id</td>
				<td style="background-color:white">Title</td>
				<td style="background-color:white">Length</td>
			</tr>
	
		{foreach $news as $one_news}
		
			{$id assign $one_news->get_identity()}
			{$title assign $one_news->get_title()}
		
			<tr>
				<td style="background-color:{if $id == 2}white{elseif $id == 3}cyan{else}yellow{/if};font-family:arial;">{$id}</td>
				<td style="background-color:white;font-family:arial;">{$title}</td>
				<td style="background-color:white;font-family:arial;">{length $title}</td>
			</tr>
				
		{/foreach}
		
		</table>
