class Home extends Controller {

	/**
	 * Constructor
	 *
	 * @access public
	 * @return object
	 */

	public function __construct() {

		$this->modelNews = function() { return new News; };
		
		parent::__construct();
	}
	
	/**
	 * the main page
	 *
	 * @access public
	 * @return void
	 */

	public function show() {

		$aNews = $this->modelNews->get();

		$oNewsCriteria = new \src\Front\Entity\news;
		
		$this->modelNews->update($oNewsCriteria);
		
		$this->view
			 ->assign('news', $aNews)
			 ->display();	
	}
}