class Session {

  	/**
  	 * set a value
  	 *
  	 * @access public
  	 * @param  string $sName name of the session
  	 * @param  mixed $mValue value of this sesion var
  	 * @return \lib\Session
  	 */

  	public static function set($sName, $mValue) {

    	$_SESSION[$sName] = $mValue;
    	return $this;
  	}

  	/**
  	 * set a value
  	 *
  	 * @access public
  	 * @param  string $sName name of the session
  	 * @return mixed
  	 */

  	public static function get($sName) {

    	return $_SESSION[$sName];
  	}

  	/**
  	 * start the session
  	 *
  	 * @access public
  	 * @return mixed
  	 */

  	public static function start() {

    	session_start();
  	}

  	/**
  	 * set a flashbag value
  	 *
  	 * @access public
  	 * @param  string $sName name of the session
  	 * @param  string $sValue value of this sesion var
  	 * @return \lib\Session
	 */

 	 public static function setFlashBag($sName, $sValue) {

  		if (!isset($_SESSION['flashbag'])) { $_SESSION['flashbag'] = array(); }

  		$_SESSION['flashbag'][$sName] = $sValue;
  		return $this;
	}
}
